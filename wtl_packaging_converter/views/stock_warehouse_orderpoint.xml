<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_warehouse_orderpoint_tree_editable_box_converter" model="ir.ui.view">
        <field name="name">view_warehouse_orderpoint_tree_editable_box_converter</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree_editable" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_on_hand']" position="after">
                <field name="bx_available"/>
                <field name="units_available"/>
            </xpath>
        </field>
    </record>
</odoo>